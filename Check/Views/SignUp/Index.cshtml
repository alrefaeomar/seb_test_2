
@{
    ViewBag.Title = "SignUp";
}
<section class="SignUp-page">
    <div class="p-1 text-center">
        <img class="w-75 shadow-lg rounded-lg" src="~/Content/Assets/MVC-Missouri-Valley-Logo-MO-Val-1000-563.png" />
    </div>
    <div class="d-flex flex-lg-row  flex-md-column  flex-sm-column flex-xs-column m-10 justify-content-center align-content-center">
     
        <div class="Layout col bg-light justify-content-center align-content-center rounded-lg p-5">

            <!--Forms for Sign In -->
            <form>
                <h1 class="title">MVC Sign Up Portal</h1>

                <!--New User Link-->
                <h4 class="link"><span>@Html.ActionLink("Go back to the Login", "Index", "Login")</span></h4>
                <hr />

                <div class="input-group input-group-md mb-3">
                    <input type="text" placeholder="Student ID" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>

                <div class="input-group input-group-md mb-3">
                    <input type="text" placeholder="Student Email" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>            
                <br />
                <div class="p-1 text-center"><button type="button" class="btn btn-primary text-center mr-4 mb-4">Sign Up<i class="fas text-center ml-3 fa-sign-in-alt"></i></button></div>



            </form>
            <div class="p-1 text-center">
                <button data-toggle="modal" data-target="#Instructions-modal" class="btn btn-primary mr-4 mb-4">Instructions<i class="fas text-center ml-3 fa-angle-up"></i></button>
            </div>

            <div class="modal hide fade in" id="Instructions-modal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Instructions</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p class="text-justify">Please complete the form below to set-up your account. Make sure to provide your Missouri Valley College email address if you are enrolled in class or if you are a returning student. If not, please provide the email address you used in your application for Admissions. On successful verification of your data, an email will be sent to you to complete your sign-up process.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-Exit" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
